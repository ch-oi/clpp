<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ImageFragment"
    android:orientation="horizontal">
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text=" Today's Recommend"
            android:textStyle="bold"
            android:textSize="40dp"
            android:fontFamily="@font/font"
            android:textColor="@color/black"
            android:background="@color/white"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/moon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ToggleButton
            android:id="@+id/button_favorite2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_favorite"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            app:layout_constraintStart_toStartOf="@id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/likeCountTextView"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:text="0 Likes"
            app:layout_constraintStart_toStartOf="@id/button_favorite2"
            app:layout_constraintTop_toBottomOf="@+id/button_favorite2"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginStart="10dp"
            android:ems="10"
            android:inputType="text"
            android:text=""
            app:layout_constraintStart_toStartOf="@id/likeCountTextView"
            app:layout_constraintTop_toBottomOf="@+id/likeCountTextView" />

        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="게시"
            android:onClick="clickComment"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="335dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ToggleButton
            android:id="@+id/button_favorite3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_favorite"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            app:layout_constraintStart_toStartOf="@id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/likeCountTextView2"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:text="0 Likes"
            app:layout_constraintStart_toStartOf="@id/button_favorite3"
            app:layout_constraintTop_toBottomOf="@+id/button_favorite3"/>

        <EditText
            android:id="@+id/editTextt"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginStart="10dp"
            android:ems="10"
            android:inputType="text"
            android:text=""
            app:layout_constraintStart_toStartOf="@id/button_favorite2"
            app:layout_constraintTop_toBottomOf="@+id/button_favorite2" />

        <Button
            android:id="@+id/uploadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="게시"
            android:onClick="clickComment"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="335dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pppp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ToggleButton
            android:id="@+id/like"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_favorite"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            app:layout_constraintStart_toStartOf="@id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/likeCountTextView3"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:text="0 Likes"
            app:layout_constraintStart_toStartOf="@id/button_favorite2"
            app:layout_constraintTop_toBottomOf="@+id/button_favorite2"/>

        <EditText
            android:id="@+id/editTexttt"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginStart="10dp"
            android:ems="10"
            android:inputType="text"
            android:text=""
            app:layout_constraintStart_toStartOf="@id/button_favorite2"
            app:layout_constraintTop_toBottomOf="@+id/button_favorite2" />

        <Button
            android:id="@+id/uploaddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="게시"
            android:onClick="clickComment"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
